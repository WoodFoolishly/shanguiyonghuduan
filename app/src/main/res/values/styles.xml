<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextBlack">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextBlue">
        <item name="android:textColor">@color/colorTitleRightBlue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PasswordIcon">
        <item name="android:button">@drawable/is_password</item>
    </style>

    <style name="CheckBg">
        <item name="android:button">@drawable/bg_check</item>
    </style>

    <style name="TextYellow">
        <item name="android:textColor">@color/colorTextYellow</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabLayoutTextSizeStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text_subhead_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/text_subhead</item>
    </style>

    <style name="text_body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_sub</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>
</resources>
