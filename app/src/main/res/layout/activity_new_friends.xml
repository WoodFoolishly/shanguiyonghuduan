<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shangui.shangui.activity.NewFriendsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_color">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />

            <ImageView
                android:id="@+id/return_im"
                style="@style/TitleTheme"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:paddingStart="25dp"
                android:src="@drawable/icon_arrow_left"
                tools:ignore="RtlSymmetry" />

            <TextView
                style="@style/TitleTheme"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="我的好友"
                tools:ignore="HardcodedText" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp">

            <EditText
                android:id="@+id/search_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_looking"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/colorEditGray"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp">

            <EditText
                android:id="@+id/liyou_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_looking"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/colorEditGray"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp">

            <Button
                android:id="@+id/queren_bt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="添加"
                android:gravity="center"
                android:padding="10dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contacts_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:src="@drawable/record" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="通讯录好友"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:src="@drawable/more" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
